@model UgbFront.Models.ProdutoModel

<h1>Editar Produto</h1>

<form asp-action="Edit" asp-route-id="@Model.ProdutoId">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EAN"></label>
        <input asp-for="EAN" class="form-control" />
        <span asp-validation-for="EAN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrecoUnitario"></label>
        <input asp-for="PrecoUnitario" class="form-control" />
        <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CotaMinima"></label>
        <input asp-for="CotaMinima" class="form-control" />
        <span asp-validation-for="CotaMinima" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-danger">Voltar à Lista</a>
</form>