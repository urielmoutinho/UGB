@model UgbFront.Models.PedidoInternoModel

<h1>Editar Pedido Interno</h1>

<form method="post">
    <input type="hidden" asp-for="PedidoInternoId" />
    <div class="form-group">
        <label asp-for="@Model.ProdutoId"></label>
        <select asp-for="@Model.ProdutoId" class="form-control">
            <option value="">Selecione um produto</option>
            @foreach (var produto in ViewBag.Produtos)
            {
                <option value="@produto.ProdutoId">@produto.Nome</option>
            }
        </select>
        <span asp-validation-for="@Model.ProdutoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UsuarioId"></label>
        <select asp-for="@Model.UsuarioId" class="form-control">
            <option value="">Selecione um usuário</option>
            @foreach (var usuario in ViewBag.Usuarios)
            {
                <option value="@usuario.UsuarioId">@usuario.Nome</option>
            }
        </select>
        <span asp-validation-for="@Model.UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fabricante"></label>
        <input asp-for="Fabricante" class="form-control" />
        <span asp-validation-for="Fabricante" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" class="form-control" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataCadastro"></label>
        <input asp-for="DataCadastro" class="form-control" />
        <span asp-validation-for="DataCadastro" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Observacao"></label>
        <input asp-for="Observacao" class="form-control" />
        <span asp-validation-for="Observacao" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>