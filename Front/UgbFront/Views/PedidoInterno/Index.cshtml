@model IEnumerable<UgbFront.Models.PedidoInternoModel>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo Pedido Interno</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Código do Pedido</th>
            <th>Fabricante</th>
            <th>Quantidade</th>
            <th>Data de Cadastro</th>
            <th>Observação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => pedido.PedidoInternoId)</td>
                <td>@Html.DisplayFor(modelItem => pedido.Fabricante)</td>
                <td>@Html.DisplayFor(modelItem => pedido.Quantidade)</td>
                <td>@Html.DisplayFor(modelItem => pedido.DataCadastro)</td>
                <td>@Html.DisplayFor(modelItem => pedido.Observacao)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@pedido.PedidoInternoId" class="btn btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@pedido.PedidoInternoId" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@pedido.PedidoInternoId" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>