@model UgbFront.Models.ServicoInternoModel

<h1>Detalhes do Serviço Interno</h1>

<div>
    <h4>Serviço Interno nº: @Model.ServicoInternoId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Serviço:</dt>
        <dd>
            @{
                var servico = ViewBag.Servico;

                if (servico != null)
                {
                    <text>Nome:@servico.Nome</text>

                    <br>
                    <text>Descrição: @servico.Descricao</text>

                    <br>
                    <text>Prazo de Entrega: @servico.PrazoEntrega</text>

                    <br>
                }
                else
                {
                    <text>Desconhecido</text>
                }
            }
        </dd>
        <dt class="col-sm-4">Usuário Solicitante:</dt>
        <dd>
            @{
                var usuario = ViewBag.Usuario;

                if (usuario != null)
                {
                    <text>Nome:@usuario.Matricula</text>

                    <br>
                    <text>Endereco: @usuario.Nome</text>

                    <br>
                    <text>Email: @usuario.Departamento</text>
                }
                else
                {
                    <text>Desconhecido</text>
                }
            }
        </dd>
        <dt class="col-sm-2">Data de Cadastro:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataCadastro)</dd>
        <dt class="col-sm-2">Observação:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>
    </dl>
</div>